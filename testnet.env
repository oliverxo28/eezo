# profile
ENV=testnet

# node
EEZO_GENESIS=crates/genesis.test.json
EEZO_DATADIR=/var/lib/eezo-testnet
EEZO_CHECKPOINT_EVERY=32
EEZO_SNAPSHOT_INTERVAL=64
EEZO_LOG_COMMIT_EVERY=4
EEZO_LISTEN=0.0.0.0:8080
EEZO_METRICS_BIND=0.0.0.0:9898

# relay
RPC=https://sepolia.infura.io/v3/<YOUR_KEY>
PK=<YOUR_TESTNET_PRIVATE_KEY>
LC_ADDR=0x<DEPLOYED_LIGHTCLIENT_ADDR>
EEZO_NODE=https://testnet.eezo.io
EVM_CHAIN_ID=11155111
POLL_SECS=10
BACKOFF_MAX_SECS=60
FALLBACK_PROOF_DIR=/var/lib/eezo-testnet/proof
METRICS_BIND=0.0.0.0:9899

