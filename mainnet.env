# profile
ENV=mainnet

# node
EEZO_GENESIS=/etc/eezo/genesis.main.json
EEZO_DATADIR=/var/lib/eezo
EEZO_CHECKPOINT_EVERY=64
EEZO_SNAPSHOT_INTERVAL=128
EEZO_LOG_COMMIT_EVERY=8
EEZO_LISTEN=0.0.0.0:8080
EEZO_METRICS_BIND=0.0.0.0:9898

# relay
RPC=https://mainnet.infura.io/v3/<YOUR_KEY>
PK=<YOUR_PROD_SIGNER>
LC_ADDR=0x<MAINNET_LIGHTCLIENT_ADDR>
EEZO_NODE=https://mainnet.eezo.io
EVM_CHAIN_ID=1
POLL_SECS=30
BACKOFF_MAX_SECS=120
FALLBACK_PROOF_DIR=/var/lib/eezo/proof
METRICS_BIND=0.0.0.0:9899
